{
  "name": "agri-be",
  "version": "1.2.0-dev.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "pre-dev": "docker-compose -f ./docker/local/docker-compose.yml --env-file .env up --force-recreate -V",
    "dev": "nodemon src/index.js",
    "lint": "eslint --ext .js .",
    "test": "cross-env NODE_ENV=test tape src/test/**/*.js | faucet",
    "commit": "npm run lint -- --fix && git-cz",
    "semantic-release": "semantic-release"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "faucet": "^0.0.4",
    "git-cz": "^4.9.0",
    "nodemon": "^3.0.2",
    "proxyquire": "^2.1.3",
    "semantic-release": "^23.0.0",
    "sinon": "^17.0.1",
    "spok": "^1.5.5",
    "tape": "^5.7.3"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.4",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/npm",
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/git",
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "package-lock.json"
        ],
        "message": "chore: Release ${nextRelease.version} - <%=new Date().toLocaleDateString('en-US', {year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric' })%>\n\n${nextRelease.notes}"
      }
    ],
    "publish": false,
    "fail": false,
    "success": false,
    "npmPublish": false,
    "branches": [
      {
        "name": "main"
      },
      {
        "name": "dev",
        "prerelease": true
      }
    ]
  }
}
